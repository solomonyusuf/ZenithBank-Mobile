<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZenithBank.Pages.DashboardPage"
             xmlns:local="clr-namespace:ZenithBank.Pages.Shared">
    
    <VerticalStackLayout Padding="0,1,0,0">

        <HorizontalStackLayout  VerticalOptions="Start" HorizontalOptions="Center" Padding="10,1,10,0">
            <Image 
            HeightRequest="50"
            HorizontalOptions="Start"
            Source="logo.png"
            />
        </HorizontalStackLayout>

        <Frame 
            VerticalOptions="Start" 
            HorizontalOptions="Start"
            Margin="10,10,10,5" 
            Padding="6"
            CornerRadius="15"
            BorderColor="Transparent"
            BackgroundColor="{Binding cardColor}">
            <HorizontalStackLayout Spacing="5" >

                <Frame HeightRequest="50" WidthRequest="50" 
                   Margin="10,0,0,0"
                   CornerRadius="25" 
                   VerticalOptions="Center"
                   HorizontalOptions="Center">
                    <Image 
                        HeightRequest="55"
                        WidthRequest="50"
                        Source="alexa.jpg"
                        />
                </Frame>

                <Label 
                    Text="Marvellous Alexa"
                    FontSize="15" 
                    FontFamily="Arial"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    />


                <ImageButton 
                        HeightRequest="30"
                        Margin="100,0,0,0"
                        VerticalOptions="Center"
                        HorizontalOptions="End"
                        Source="support.png"
                        />

            </HorizontalStackLayout>

        </Frame>
        
        
        <StackLayout  Padding="10,1,10,0">
            <!-- Card with Background #ee232b -->
            <Frame BackgroundColor="#ee232b"
                   BorderColor="Transparent"
                   Padding="20"
                   CornerRadius="15"
                   HasShadow="True">
                <StackLayout>
                    <HorizontalStackLayout>
                        <Image Margin="3" Source="wallet.png" HeightRequest="20"   />
                        <Label 
                            Margin="3"
                             Text="Current Balance"
                             TextColor="White"
                             FontSize="13" 
                             HorizontalOptions="Start" />
                        <Label 
                             Margin="85,0,0,0"
                             Text="See History >"
                             TextColor="White"
                             FontSize="12" 
                             HorizontalOptions="End" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="40">
                        <Label 
                         Margin="0,10,0,0"
                         Text="â‚¦950,250,000,000"
                         TextColor="White"
                         FontSize="24"
                         HorizontalOptions="StartAndExpand" />

                        <Image Source="closedeye.png" HeightRequest="20"   />

                   </HorizontalStackLayout>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="{Binding cardColor}"
                   Padding="15"
                   Margin="0,10,0,0"
                   CornerRadius="15"
                   BorderColor="Transparent"
                   HasShadow="True">    
                <HorizontalStackLayout Spacing="50">
                    <VerticalStackLayout>
                        <Frame CornerRadius="30" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="{StaticResource Tertiary}">
                            <Image Source="naira.png" HeightRequest="50" HorizontalOptions="Center"   />
                        </Frame>
                        <Label 
                             Margin="3"
                             Text="To Zenith"
                             FontSize="13" 
                             HorizontalOptions="Center" />   
                        
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Frame CornerRadius="30" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="{StaticResource Tertiary}">
                            <Image Source="institution.png" HeightRequest="50" HorizontalOptions="Center"   />
                        </Frame>
                        <Label 
                             Margin="3"
                             Text="Bank"
                             FontSize="13" 
                             HorizontalOptions="Center" />

                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Frame CornerRadius="30" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="{StaticResource Tertiary}">
                            <Image Source="creditcard.png" HeightRequest="50" HorizontalOptions="Center"   />
                        </Frame>
                        <Label 
                             Margin="3"
                             Text="Withdrawal"
                             FontSize="13" 
                             HorizontalOptions="Center" />

                    </VerticalStackLayout>

                </HorizontalStackLayout>
            </Frame>

            <Frame BackgroundColor="Transparent"
                   Padding="20"
                   Margin="0,10,0,0"
                   CornerRadius="15"
                   BorderColor="Transparent"
                   HasShadow="False">
                <HorizontalStackLayout Spacing="50">
                    <VerticalStackLayout>
                        <Frame CornerRadius="30" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="{StaticResource Tertiary}">
                            <Image Source="naira.png" HeightRequest="50" HorizontalOptions="Center"   />
                        </Frame>
                        <Label 
                             Margin="3"
                             Text="Loan"
                             FontSize="13" 
                             HorizontalOptions="Center" />

                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Frame CornerRadius="30" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="{StaticResource Tertiary}">
                            <Image Source="institution.png" HeightRequest="50" HorizontalOptions="Center"   />
                        </Frame>
                        <Label 
                             Margin="3"
                             Text="List Banks"
                             FontSize="13" 
                             HorizontalOptions="Center" />

                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Frame CornerRadius="30" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="{StaticResource Tertiary}">
                            <Image Source="creditcard.png" HeightRequest="50" HorizontalOptions="Center"   />
                        </Frame>
                        <Label 
                             Margin="3"
                             Text="Invoices"
                             FontSize="13" 
                             HorizontalOptions="Center" />

                    </VerticalStackLayout>

                </HorizontalStackLayout>

            </Frame>
            
            <Frame 
                   BackgroundColor="Transparent"
                   Padding="20"
                   Margin="0,5,0,0"
                   BorderColor="Transparent"
                   CornerRadius="15"
                   HasShadow="False">
                <HorizontalStackLayout Spacing="40">
                    <VerticalStackLayout>
                        <Frame CornerRadius="30" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="{StaticResource Tertiary}">
                            <Image Source="naira.png" HeightRequest="50" HorizontalOptions="Center"   />
                        </Frame>
                        <Label 
                             Margin="3"
                             Text="Bulk "
                             FontSize="13" 
                             HorizontalOptions="Center" />

                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Frame CornerRadius="30" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="{StaticResource Tertiary}">
                            <Image Source="institution.png" HeightRequest="50" HorizontalOptions="Center"   />
                        </Frame>
                        <Label 
                             Margin="3"
                             Text="Manage"
                             FontSize="13" 
                             HorizontalOptions="Center" />

                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Frame CornerRadius="30" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="{StaticResource Tertiary}">
                            <Image Source="creditcard.png" HeightRequest="50" HorizontalOptions="Center"   />
                        </Frame>
                        <Label 
                             Margin="3"
                             Text="ATM Cards"
                             FontSize="13" 
                             HorizontalOptions="Center" />

                    </VerticalStackLayout>

                </HorizontalStackLayout>

            </Frame>

            
           
            
        </StackLayout>

        <Frame  
               BackgroundColor="{Binding cardColor}"
               Padding="10,0,10,10"
               Margin="0,40,0,0"
               BorderColor="Transparent"
               HasShadow="False"
               VerticalOptions="End">


            <HorizontalStackLayout Spacing="27">
                <VerticalStackLayout>
                    <Frame CornerRadius="30" BorderColor="Transparent" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="Transparent" 
                           Padding="0"
                           Margin="0,0,0,0"
                           >
                        <Image Source="dashboard.png" HeightRequest="40" HorizontalOptions="Center"   />
                    </Frame>
                    <Label 
                         Margin="0,0,0,0"
                         Text="Dashboard"
                         FontSize="13" 
                         HorizontalOptions="Center" />

                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Frame CornerRadius="30" BorderColor="Transparent" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="Transparent"
                        Padding="0"
                        Margin="0,0,0,0"
                        >
                        <Image Source="card.png" HeightRequest="40" HorizontalOptions="Center"   />
                    </Frame>
                    <Label 
                         Margin="0"
                         Text="Card"
                         FontSize="13" 
                         HorizontalOptions="Center" />

                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Frame CornerRadius="30" BorderColor="Transparent" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="Transparent"
                           Padding="0"
                            Margin="0,0,0,0">
                        <Image Source="transfer.png" HeightRequest="40" HorizontalOptions="Center"   />
                    </Frame>
                    <Label 
                         Margin="0"
                         Text="Transfer"
                         FontSize="13" 
                         HorizontalOptions="Center" />

                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Frame CornerRadius="30" BorderColor="Transparent" HeightRequest="60" WidthRequest="60" HasShadow="False" BackgroundColor="Transparent"
                           Padding="0"
                           Margin="0,0,0,0">
                        <Image Source="settings.png" HeightRequest="40" HorizontalOptions="Center"   />
                    </Frame>
                    <Label 
                         Margin="0"
                         Text="Settings"
                         FontSize="13" 
                         HorizontalOptions="Center" />

                </VerticalStackLayout>

            </HorizontalStackLayout>


        </Frame>

    </VerticalStackLayout>
    
</ContentPage>