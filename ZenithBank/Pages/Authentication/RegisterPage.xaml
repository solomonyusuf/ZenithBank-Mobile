<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZenithBank.Pages.Authentication.RegisterPage"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
             Title="">


    <StackLayout VerticalOptions="Start" HorizontalOptions="Center" Padding="15" Spacing="20">
        <!-- Bank Logo -->
        <Image Source="logo.png" 
           HeightRequest="80"
           HorizontalOptions="Center" />

        <!-- Welcome Text -->
        <Label Text="Account Sign Up"
           FontSize="24"
           FontAttributes="Bold"
           HorizontalTextAlignment="Center"
            />

        <Label Text="Get started in our financial services"
           FontSize="16"
           HorizontalTextAlignment="Center"
            />

        <sf:SfTextInputLayout  Hint="BVN" OutlineCornerRadius="25" HeightRequest="90">
            <Entry x:Name="BVNEntry"
             Placeholder="Enter BVN"
             FontSize="16"
             TextColor="#333"   
             PlaceholderColor="#aaa"
             
             />
        </sf:SfTextInputLayout>
        <Button Text="Register"
            BackgroundColor="#ee232b"
            TextColor="White"
            CornerRadius="25"
            HeightRequest="50"
             />


    </StackLayout>

    
</ContentPage>